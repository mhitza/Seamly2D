name: Build
on:
  push:

jobs:
  linux:
    if: false
    runs-on: ubuntu-latest
    env:
      QT_SELECT: 5

    steps:
      - uses: actions/checkout@v2

      - name: install build dependencies
        run: |
          sudo apt install g++ make ccache qttools5-dev-tools libqt5xmlpatterns5-dev libqt5svg5-dev

      - name: build
        run: |
          mkdir /home/runner/local
          qmake PREFIX=/home/runner/local Seamly2D.pro
          make
          make install

      - name: archive
        uses: actions/upload-artifact@v2
        with:
          name: seamly2d-linux
          path: /home/runner/local

  windows:
    runs-on: windows-latest
    env:
      QT_SELECT: 5

    steps:
      - uses: actions/checkout@v2

      - uses: ilammy/msvc-dev-cmd@v1

      - name: install build dependencies
        uses: jurplel/install-qt-action@v2

      - name: build
        run: |
          qmake.exe Seamly2D.pro
          nmake
          Get-ChildItem -Path . -Recurse -Filter *.exe
          New-Item -Path . -Name "executables" -ItemType "directory"
          Copy-Item -Path src\app\seamly2d\bin\seamly2d.exe -Destination executables\
          Copy-Item -Path src\app\seamlyme\bin\seamlyme.exe -Destination executables\

      - name: archive
        if: false
        uses: actions/upload-artifact@v2
        with:
          name: build-windows
          path: executables

  macos:
    if: false
    runs-on: macos-latest
    env:
      QT_SELECT: 5

    steps:
      - uses: actions/checkout@v2

      - name: install build dependencies
        uses: jurplel/install-qt-action@v2

      - name: build
        run: |
          qmake Seamly2D.pro
          make
          mkdir /Users/runner/local
          hdiutil create -fs HFS+ -srcfolder src/app/seamly2d/bin/Seamly2D.app -volname "Seamly2D" Seamly2D.dmg
          hdiutil create -fs HFS+ -srcfolder src/app/seamlyme/bin/seamlyme.app -volname "SeamlyME" SeamlyME.dmg
          cp Seamly2D.dmg /Users/runner/local
          cp SeamlyME.dmg /Users/runner/local

      - name: archive
        uses: actions/upload-artifact@v2
        with:
          name: seamly2d-macos
          path: /Users/runner/local
